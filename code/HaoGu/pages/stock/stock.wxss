}

/* 添加自选 */
#section_add_zxg {
    position: fixed;
    bottom: 0;
    width: 750rpx;
    height: 98rpx;
    background-color: #f7f7fa;
    border-top: 1rpx solid #b2b2b2;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    z-index: 100;
}

#section_add_zxg image {
    width: 48rpx;
    height: 48rpx;
    margin-right: 12rpx;
}

#section_add_zxg text {
    color: #576b95;
    font-size: 31rpx;
}

/* 新闻 */
