/* pages/haogu/haogu.wxss */

.list_item {
  display: flex;
  flex-direction: column;
  position: relative;
  background-color: #fff;
  padding-bottom: 10rpx;
  margin-bottom: 22rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
  border-radius: 5px;
}

.list_item .item_title {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 74rpx;
  align-items: center;
}

.list_item .item_title_icon {
  position: relative;
  width: 8rpx;
  height: 30rpx;
  margin-left: 32rpx;
  border-radius: 3px;
}

.list_item .item_title_name {
  position: relative;
  margin-left: 16rpx;
  font-weight: bold;
}

.list_item .item_title_desp {
  position: relative;
  margin-left: 24rpx;
  margin-top: 10rpx;
}

.list_item .item_desp {
  display: flex;
  flex-direction: row;
  height: 66rpx;
  align-items: center;
  margin-left: 24rpx;
  /*justify-content: center;*/
}

.list_item .item_desp text {
  height: 30rpx;
  padding: 0rpx 10rpx 0rpx 10rpx;
  line-height: 30rpx;
  border-radius: 3px;
  background-color: rgba(235, 51, 59, 0.55);
}

.list_item .item_group {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.list_item .item_group_line {
  position: absolute;
  width: 1px;
  top: 20rpx;
  bottom: 20rpx;
}

.list_item .item_stock {
  width: 23%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 1%;
}

.list_item .item_stock text {
  width: 100%;
  text-align: center;
  margin: 2rpx;
}
