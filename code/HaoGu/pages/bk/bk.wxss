}

#section_quotation .quota_colum1 {
    position: absolute;
    left: 30rpx;
}

#section_quotation .quota_colum2 {
    position: absolute;
    left: 135rpx;
}

#section_quotation .quota_colum3 {
    position: absolute;
    left: 293rpx;
}

#section_quotation .quota_colum4 {
    position: absolute;
