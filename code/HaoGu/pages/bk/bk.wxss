@import "../common/KLineView/KLineView.wxss";

#section_quotation {
    width: 750rpx;
    height: 213rpx;
    margin-top: 21rpx;
    position: relative;
}

.quota_price {
    width: 280rpx;
    height: 80rpx;
    position: absolute;
    font-size: 52rpx;
    text-align: center;
    line-height: 80rpx;
}

.quota_zdf {
    width: 140rpx;
    height: 47rpx;
    position: absolute;
    top: 70rpx;
    left: 0;
    line-height: 47rpx;
    text-align: right;
    padding-right: 8rpx;
    box-sizing: border-box;
}

.quota_zd {
    width: 140rpx;
    height: 47rpx;
    position: absolute;
    top: 70rpx;
    left: 140rpx;
    line-height: 47rpx;
    text-align: left;
    padding-left: 8rpx;
    box-sizing: border-box;
}

#section_quotation .quota_arrow {
    width: 2rpx;
    height: 8rpx;
}

#section_quotation .quota_item {
    font-size: 26rpx;
    color: #888888;
}

#section_quotation .quota_row1 {
    position: absolute;
    top: 10rpx;
}

