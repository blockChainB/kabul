/* pages/search/search.wxss */
@import "../common/SearchBar/SearchBar.wxss";

.search_view {
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list_item {
  display: flex;
  flex-direction: row;
  position: relative;
  width: 100%;
  height: 100rpx;
  align-items: center;
}

.list_item .item_type {
  position: relative;
  width: 50rpx;
  /*height: 30rpx;*/
  margin-left: 20rpx;
  border-style: solid;
  border-radius: 6rpx;
  border-width: 1rpx;
  padding: 6rpx;
  text-align: center;
  /*line-height: 30rpx;*/
}

.list_item .item_name {
  position: relative;
  margin-left: 20rpx;
  width: 140rpx;
}

.list_item .item_code {
  position: relative;
  margin-left: 30rpx;
  width: 160rpx;
}

.list_item image {
  position: absolute;
  width: 44rpx;
  height: 100%;
  right: 50rpx;
}
